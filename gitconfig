[mergetool "ediff"]
        cmd = /Applications/Emacs.app/Contents/MacOS/bin/emacsclient -c --eval \"(git-mergetool-emacsclient-ediff \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" \\\"$MERGED\\\")\"
        trustExitCode = true

[mergetool]
        prompt = false

[merge]
        tool = ediff
        conflictstyle = diff3
